{
    "family": "spring_demo",
    "containerDefinitions": [
        {
            "image": "661382096004.dkr.ecr.us-east-1.amazonaws.com/spring_demo:%APP_VERSION%",
            "name": "spring_demo",
			"environment" : [
			    { "name" : "JAVA_OPTS", "value" : "-Xmx256m -javaagent:/glowroot.jar"}
			],
            "cpu": 128,
            "memory": 256,
            "essential": true,
            "portMappings": [
                { "containerPort": 4444, "hostPort": 80},
                { "containerPort": 4000, "hostPort": 4000}
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/app/plat/spring_demo",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "staging/bingo"
                }
            }
        }
    ]
}
